{
  "compilerOptions": {
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "src",
    "rootDir": "src",
    "paths": {
      "~/*": ["*"],
      "@/*": ["*"],
      "@shared/*": ["../../shared/*"]
    },
    "typeRoots": ["src/types", "node_modules/@types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
