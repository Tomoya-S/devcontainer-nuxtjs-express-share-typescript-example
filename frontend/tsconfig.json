{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    // "importHelpers": true,
    "baseUrl": "src",
    "rootDir": "src",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "@shared/*": ["../../shared/*"]
    },
    "types": [
      "@nuxt/types",
      "@nuxtjs/axios",
      "@types/node",
      "../../shared/types"
    ]
  },
  "exclude": ["node_modules", ".nuxt", "dist"],
  "include": ["src"]
}
